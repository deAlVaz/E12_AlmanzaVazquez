---
import "../styles/estilos_principales.scss"
export interface Props {
	title: string;
	palabras : string;
	description : string;
	author : string;
}

const { title, palabras, description, author } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/img/AlV2.png" /> <!--img en pestaña de navegador -->
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="palabras" content={palabras}/>
		<meta name="author" content={author}/>
		<title>{title}</title>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-dark sticky-top">
			<div class="container">
			  <a class="navbar-brand" href="/" style="color: #FFFFFF"> 
				<img src="/img/AlV2.png" width="35" height="35">
				AlVaz
			  </a>
		  
			  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			  </button>
			  <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
				<ul class="navbar-nav">
				  <li class="nav-item">
					<a class="nav-link active" aria-current="page" href="/" style="color: #FFFFFF">INICIO|</a>
				  </li>
				  <li class="nav-item">
					<a class="nav-link" href="about" style="color: #FFFFFF">|SOBRE MI|</a>
				  </li>
				  <li class="nav-item">
					<a class="nav-link" href="galeria-astro" style="color: #FFFFFF">|ALBUM|</a>
				  </li>
				  <li class="nav-item">
					<a class="nav-link" href="proyecto" style="color: #FFFFFF">|PROYECTO|</a>
				  </li>
				  <li class="nav-item">
					<a class="nav-link" href="contacto" style="color: #FFFFFF">|CONTACTO</a>
				  </li>
				  
				</ul>
			  </div>
			</div>
		  </nav>
		<slot />
		<footer class="text-center text-white" style="background-color: #000000;">
			<!-- Grid container -->
			<div class="container pt-4">
			  <!-- Section: Social media -->
			  <section class="mb-4" >
				<div class="text-center text-white p-0 " style="background-color: rgba(0, 0, 0, 0.2);">
					Todos los derechos reservados.
			    </div>
				<div class="text-center text-white p-0 " style="background-color: rgba(0, 0, 0, 0.2);">
					By: AlVaz
			    </div>
				<div class="text-center text-white p-0 " style="background-color: rgba(0, 0, 0, 0.2);">
					© 2022 Copyright
			    </div>
				<div class="text-center text-white p-0 " style="background-color: rgba(0, 0, 0, 0.2);">
					<a class="link-danger" href="contacto">Contactanos!</a>
				</div>
				<div class="text-center text-white p-2 " style="background-color: rgba(0, 0, 0, 0.2);">
					<a href="https://www.instagram.com/De.alvaz/" target="_blank"><img src="/img/Inst2.png" width="25" height="25" /></a>
					<a href="https://www.facebook.com/profile.php?id=100088411871758" target="_blank"><img src="/img/FB.png" width="25" height="25" /></a>
			    </div>
			  </section>
			</div>
		</footer>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
		<!--<script src="/js/Galeria.js" is:inline></script>-->
	</body>
</html>


